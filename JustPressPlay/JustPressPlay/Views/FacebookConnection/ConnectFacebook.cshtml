@model JustPressPlay.ViewModels.FacebookConnectionViewModel

@{
    ViewBag.Title = "ConnectFacebook";
}

<script>
    @* Access FB api on form submission *@
    jQuery(document).ready(function () {
        jQuery('#fbConnect').submit(function () {
            alert("JS triggered on FB form!");
            return false;
        });
    });
</script>

<h2>ConnectFacebook</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "fbConnect" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>FacebookConnectionViewModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NotificationsEnabled)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NotificationsEnabled)
            @Html.ValidationMessageFor(model => model.NotificationsEnabled)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AutomaticSharingEnabled)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AutomaticSharingEnabled)
            @Html.ValidationMessageFor(model => model.AutomaticSharingEnabled)
        </div>

        <p>
            <input type="submit" value="Connect to Facebook" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

