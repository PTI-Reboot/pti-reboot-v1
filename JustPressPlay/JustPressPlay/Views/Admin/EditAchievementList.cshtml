@{
    ViewBag.Title = "EditAchievementList";
}

@model JustPressPlay.ViewModels.EditAchievementListViewModel


<div id="adminBody">

    <div class="row wide">

        <div class="large-3 columns">

            @{ Html.RenderPartial("_AdminNavigation"); }

        </div>

        <div class="large-9 columns">

            <div class="panel">
                <h2>EditAchievementList</h2>
            </div>

            <div class="panel">
                <ul>
                    @foreach (JustPressPlay.ViewModels.EditAchievementListViewModel.EditAchievement achievement in Model.Achievements)
                    {
	                    <li><img src =@Url.Content(achievement.Icon) /> @Html.ActionLink(achievement.Title, "EditAchievement", new { id = achievement.ID })</li>	
                    }
                </ul>
            </div>

        </div>

    </div>
</div>