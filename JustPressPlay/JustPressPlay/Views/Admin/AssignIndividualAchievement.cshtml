@{
    ViewBag.Title = "AssignIndividualAchievement";
}

@model JustPressPlay.ViewModels.AssignIndividualAchievementViewModel


<div id="adminBody">

    <div class="row wide">

        <div class="large-3 columns">

            @{ Html.RenderPartial("_AdminNavigation"); }

        </div>

        <div class="large-9 columns">

            <div class="panel">
                <h2>Assign Individual Achievement</h2>
            </div>

            <div class="panel">
                @using (Html.BeginForm()) {
	            @Html.AntiForgeryToken()
	            @Html.ValidationSummary()
	
	            <fieldset>
		            <legend>Choose the user and the achievement</legend>
		           
				            @Html.LabelFor(m => m.UserID)
				            @Html.DropDownListFor(m => m.UserID, new SelectList(Model.Users, "id", "display_name"), new { size = "10" })
				            @Html.ValidationMessageFor(m => m.UserID)
			           
				            @Html.LabelFor(m => m.AchievementID)
				            @Html.DropDownListFor(m => m.AchievementID, new SelectList(Model.Achievements, "id", "title"), new { size = "10" })
				            @Html.ValidationMessageFor(m => m.AchievementID)
			           
			
		           
		            <input type="submit" value="Assign" />
	            </fieldset>
            }
            </div>

        </div>

    </div>
</div>