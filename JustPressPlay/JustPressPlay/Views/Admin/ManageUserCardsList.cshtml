@{
    ViewBag.Title = "ManageUserCardsList";
}

@model JustPressPlay.ViewModels.UserListViewModel

<div id="adminBody">

    <div class="row wide">

        <div class="large-3 columns">

            @{ Html.RenderPartial("_AdminNavigation"); }

        </div>

        <div class="large-9 columns">

            <div class="panel">

                <h2>Manage User Cards</h2>
                <p>Select the card to edit</p>

                <table>
                    <thead>
                        <tr>
                            <th>User ID</th>
                        </tr>
                    </thead>
                    <tbody>


                <ul>
                @foreach (JustPressPlay.ViewModels.UserListViewModel.User user in Model.Users)
                {
	                <li>@Html.ActionLink(user.Username + " (" + user.RealName + ")", "ManageUserCards", new { id = user.ID })</li>	
                }
                </ul>

            </div>
            
        </div>

    </div>
</div>