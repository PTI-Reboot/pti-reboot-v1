@{
    ViewBag.Title = "EditUserList";
}

@model JustPressPlay.ViewModels.UserListViewModel


<div id="adminBody">

    <div class="row wide">

        <div class="large-3 columns">

            @{ Html.RenderPartial("_AdminNavigation"); }

        </div>

        <div class="large-9 columns">

            <div class="panel">
                <h2>Edit User</h2>
                <p>Select the user to edit</p>
            </div>

            <div class="panel">
                <ul>
                    @foreach (JustPressPlay.ViewModels.UserListViewModel.User user in Model.Users)
                    {
	                    <li>@Html.ActionLink(user.Username + " (" + user.RealName + ")", "EditUser", new { id = user.ID })</li>	
                    }
                </ul>
            </div>

        </div>

    </div>
</div>