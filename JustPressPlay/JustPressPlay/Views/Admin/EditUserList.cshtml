@{
    ViewBag.Title = "EditUserList";
}

@model JustPressPlay.ViewModels.UserListViewModel


<div id="adminBody">

    <div class="row wide">

        <div class="large-3 columns">

            @{ Html.RenderPartial("_AdminNavigation"); }

        </div>

        <div class="large-9 columns">

            <div class="panel">
                <h2>Edit User</h2>
                <p>Select the user to edit</p>
            </div>
            <div class="panel">
                <table>
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>Display Name</th>
                            <th>Real Name</th>
                            <th>Is a player?</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Users)
                        {	
                            <tr>
                                <td>@u.ID</td>
                                <td>@Html.ActionLink(u.Username, "EditUser", new { id = u.ID })</td>
                                <td>@Html.ActionLink(u.DisplayName, "EditUser", new { id = u.ID })</td>
                                <td>@Html.ActionLink(u.RealName, "EditUser", new { id = u.ID })</td>
                                <td>@u.IsPlayer</td>
                                <td>@u.LastLoginString</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>