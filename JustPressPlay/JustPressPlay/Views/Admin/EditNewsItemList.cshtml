@model JustPressPlay.ViewModels.EditNewsItemListViewModel

@{
    ViewBag.Title = "EditNewsItemList";
}

<div id="adminBody">

    <div class="row wide">

        <div class="large-3 columns">

            @{ Html.RenderPartial("_AdminNavigation"); }

        </div>

        <div class="large-9 columns">

            <div class="panel">
                <h2>Edit News Item</h2>
                <p>Select the news item to edit</p>
            </div>

            <div class="panel">
                <ul class="list-pages">
                    @foreach (JustPressPlay.ViewModels.EditNewsItemListViewModel.NewsItemEntry item in Model.NewsItems)
                    {
                        <li>@Html.ActionLink(item.Title, "EditNewsItem", new { id = item.Id })</li>
                    }
                </ul>
            </div>

        </div>

    </div>
</div>