@{
    ViewBag.Title = "People";
}

@model JustPressPlay.ViewModels.PlayersListViewModel


<div id="lowerBody">

    <div class="row">
        <div class="large-12 columns">
            <h1 class="light">PEOPLE</h1>
        </div>
    </div>

    <div class="row">
            

        <div id="lowerBodySidebar" class="large-3 push-9 columns searchSidebar">

            <input type="text" id="search" placeholder="Search..." />

            <h4>Refine Results</h4>

            <select>
                  <option value="az">A-Z</option>
                  <option value="za">Z-A</option>
            </select>

            <h5>Show</h5>
            <label for="checkbox1">
                <input type="checkbox" id="checkbox1" checked />
                Students
            </label>

            <label for="checkbox4">
                <input type="checkbox" id="checkbox4" checked />
                Faculty
            </label>

            <label for="checkbox5">
                <input type="checkbox" id="checkbox5" checked />
                Admins
            </label>
                

        </div> <!-- END lowerBodySidebar -->



        <div class="large-9 pull-3 columns">


            <div id="playerList"></div>


            <footer>
                    
                @{ Html.RenderPartial("_Footer"); }

            </footer>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/js/plugin/jquery.jppimagelist.js")" type="text/javascript"></script>
<script>

    $(document).ready(function () {

        $('#playerList').jppimagelist({
            baseURL: '@Request.Url.GetLeftPart(UriPartial.Authority)',
            userID: '@WebSecurity.CurrentUserId',
            playerList: true,
            displayItemTitle: true,
            displayPrivacyChoice: true,
            largeSize: 5,
            loadInterval: 30
        });

    }); // End document ready



</script>