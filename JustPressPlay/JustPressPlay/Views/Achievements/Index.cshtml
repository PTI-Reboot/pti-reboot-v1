@{
    ViewBag.Title = "Achievements";
}

@model JustPressPlay.ViewModels.AchievementsListViewModel


<div id="lowerBody">

    <div class="row">
        <div class="large-8 columns">
            <h1 class="light">ACHIEVEMENTS</h1>
        </div>
    </div>

    <div class="row">
            

        <div id="lowerBodySidebar" class="large-3 push-9 columns searchSidebar">

            

            <input type="text" id="search" placeholder="Search..." />

            <h4>Refine Results</h4>

            <select>
                  <option value="az">A-Z</option>
                  <option value="za">Z-A</option>
            </select>

            <h5>Show</h5>
            <label for="checkbox1">
                <input type="checkbox" id="checkbox1" checked />
                Quad
            </label>

            <label for="checkbox4">
                <input type="checkbox" id="checkbox4" checked />
                Quad
            </label>

            <label for="checkbox5">
                <input type="checkbox" id="checkbox5" checked />
                Quad
            </label>

            <label for="checkbox6">
                <input type="checkbox" id="checkbox6" checked />
                Quad
            </label>
                

        </div> <!-- END lowerBodySidebar -->



        <div class="large-9 pull-3 columns">

            <ul class="filter-list" data-bind="foreach: lists">
                <li data-bind=" text: $data,
                                css: { selected: $data == $root.activeList() },
                                click: $root.loadList"></li>
            </ul>

            <div id="achievementList">
                <ul class="imageList large-block-grid-5 small-block-grid-4" data-bind="template: { name: 'achievement-item-template', foreach: achievements }">
                </ul>

                <div class="bottom">
                    <div class="spinner" style="display: none;"></div>
                </div>
            </div>

            <footer>
                    
                @{ Html.RenderPartial("_Footer"); }

            </footer>

        </div>
    </div>
</div>

@{ Html.RenderPartial("_ItemListTemplates"); }
