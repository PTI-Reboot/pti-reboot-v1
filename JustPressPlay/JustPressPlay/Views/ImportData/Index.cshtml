	@Html.LabelFor(m => m.UserTable)
	@Html.TextBoxFor(m => m.UserTable, new { type = "file" })

	@Html.ValidationMessageFor(m => m.ProfileTable)
	@Html.LabelFor(m => m.ProfileTable)
