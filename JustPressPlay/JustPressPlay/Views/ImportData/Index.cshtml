@{
    ViewBag.Title = "Index";
}

@model JustPressPlay.Controllers.ImportDataController.ImportDataViewModel

<h2>Import old data</h2>

@using (Html.BeginForm("Index", "ImportData", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
